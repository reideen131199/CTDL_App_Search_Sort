<UserControl x:Class="Project_Search_Sort.Radix_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Search_Sort"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="100">
    <Grid Height="{Binding Path=Height, ElementName=TextBlock_Value}">
        <Border BorderBrush="LightBlue" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="TextBlock_Value" Grid.Row="0" Margin="5" FontSize="24" TextAlignment="Center" Text="{Binding Val}"/>
                <TextBlock Name="TextBlock_Radix" Grid.Row="1" Margin="1" FontSize="20" TextAlignment="Center" Text=""/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
