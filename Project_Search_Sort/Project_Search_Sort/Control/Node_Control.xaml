<UserControl x:Class="Project_Search_Sort.Node_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Search_Sort"
             mc:Ignorable="d" 
             d:DesignHeight="40" MinHeight="40" d:DesignWidth="40" MinWidth="40">
    <Border Name="Border_Value" BorderBrush="Black" BorderThickness="2" CornerRadius="999" Background="{Binding Bg}">
        <TextBlock Name="TextBlock_Value" Margin="0" TextAlignment="Center" FontSize="24" Text="{Binding Val}"/>
    </Border>
</UserControl>
