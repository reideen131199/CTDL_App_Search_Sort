<UserControl x:Class="Project_Search_Sort.ViewRadixSort_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Search_Sort"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Row="2" Margin="0, 5, 0, 0" BorderBrush="LightGray" BorderThickness="2"  Background="#fff">
        <Grid Name="Wrap">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="{Binding Path=Height, ElementName=BlockCompare}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Canvas Name="LayoutAnimation" Grid.Row="0" Margin="5, 20, 5, 0"/>

            <TextBlock Name="BlockCompare" Grid.Row="1" FontSize="24" TextAlignment="Left"/>
            
            <Canvas Name="LayoutCount" Grid.Row="1"/>

        </Grid>
    </Border>
</UserControl>
